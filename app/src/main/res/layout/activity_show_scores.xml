<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".view.ShowScoresActivity"
    android:background="#00ffffff">
    <ProgressBar
        android:id="@+id/loader_scores"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:id="@+id/ShowScoresContentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/header_gradiant_blue"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="70dp"
            android:src="@drawable/ic_award"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/top_name"
            android:text="@string/default_top_1"
            android:textColor="@color/color3"
            android:textSize="24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/top_temps"
            android:text="@string/default_top_1_date_time"
            android:textColor="@color/color3"
            android:textSize="12sp" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rvScores"
        android:layout_weight="2"/>
</LinearLayout>
